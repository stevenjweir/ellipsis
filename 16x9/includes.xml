    <include name="Now_Playing_Widget">
        <control type="group">
            <visible>!Skin.HasSetting(Disable_Now_Playing_Widget)</visible>
            <control type="group">
                <posx>1766</posx>
                <posy>992</posy>
                <width>82</width>
                <height>75</height>
                <visible>Player.HasAudio + !Player.Paused</visible>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>82</width>
                    <height>75</height>
                    <texture>nowplaying_icon_music.png</texture>
                </control>
            </control>
            <control type="group">
                <posx>1766</posx>
                <posy>992</posy>
                <width>82</width>
                <height>75</height>
                <visible>Player.HasVideo + !Player.Paused</visible>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>82</width>
                    <height>75</height>
                    <texture>nowplaying_icon_video.png</texture>
                </control>
            </control>
            <control type="group">
                <posx>1766</posx>
                <posy>992</posy>
                <width>82</width>
                <height>75</height>
                <visible>Player.HasMedia + Player.Paused</visible>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>82</width>
                    <height>75</height>
                    <texture>nowplaying_icon_paused.png</texture>
                    <animation effect="fade" start="100" end="50" pulse="true" time="2000" reversible="false" tween="sine" easing="inout" condition="true">Conditional</animation>
                </control>
            </control>
            <control type="group">
                <visible>Player.HasAudio</visible>
                <control type="label">
                    <posx>1755</posx>
                    <posy>990</posy>
                    <width>630</width>
                    <align>right</align>
                    <label>$INFO[MusicPlayer.Title] - $INFO[MusicPlayer.Artist]</label>
                    <font>NowPlaying_Label</font>
                    <textcolor>Text</textcolor>
                    <scroll>true</scroll>
                </control>
            </control>
            <control type="group">
                <visible>Player.HasVideo</visible>
                <control type="label">
                    <posx>1755</posx>
                    <posy>990</posy>
                    <width>630</width>
                    <align>right</align>
                    <label>$INFO[VideoPlayer.TVShowTitle] $INFO[VideoPlayer.Title]</label>
                    <font>NowPlaying_Label</font>
                    <textcolor>Text</textcolor>
                    <scroll>true</scroll>
                </control>
            </control>
            <control type="group">
                <visible>Player.HasMedia</visible>
                <control type="label">
                    <posx>1750</posx>
                    <posy>1024</posy>
                    <width>630</width>
                    <align>right</align>
                    <label>$INFO[Player.Time] / $INFO[Player.Duration]</label>
                    <font>NowPlaying_Time</font>
                    <textcolor>NowPlaying_Grey</textcolor>
                    <scroll>true</scroll>
                    <visible>!Player.Seeking</visible>
                </control>
                <control type="label">
                    <posx>1750</posx>
                    <posy>1024</posy>
                    <width>630</width>
                    <align>right</align>
                    <label>$INFO[Player.SeekTime] / $INFO[Player.Duration]</label>
                    <font>NowPlaying_Time</font>
                    <textcolor>NowPlaying_Grey</textcolor>
                    <scroll>true</scroll>
                    <visible>Player.Seeking</visible>
                </control>
            </control>
        </control>
