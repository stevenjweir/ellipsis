            <onclick>ReplaceWindow(Home)</onclick>
            <texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
            <visible>Skin.HasSetting(Disable_Intro)</visible>
        </control>
        <include>Debug</include>
