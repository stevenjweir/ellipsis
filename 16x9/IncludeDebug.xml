<includes>
    <include name="Debug">
        <!-- Grid -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture>overlays/debug/debuggrid.png</texture>
            <colordiffuse>FF00bdf2</colordiffuse>
            <visible>Skin.HasSetting(Enable_Debug_Grid_Overlay)</visible>
        </control>
        <control type="group">
            <visible>Skin.HasSetting(Enable_Debug_Info)</visible>
            <control type="image">
                <posx>15</posx>
                <posy>15</posy>
                <width>1890</width>
                <height>60</height>
                <texture border="10,10,10,10">menu\library\panel.png</texture>
            </control>
            <control type="label">
                <posx>30</posx>
                <posy>15</posy>
                <width>1920</width>
                <height>60</height>
                <font>Medium</font>
                <aligny>center</aligny>
                <label>$INFO[Window.Property(xmlfile),$LOCALIZE[50149] , / ]$INFO[System.CurrentWindow,$LOCALIZE[50152] , / ]$INFO[System.FPS,$LOCALIZE[50150] , / ]$INFO[System.FreeMemory,$LOCALIZE[50151] ]</label>
            </control>
        </control>
    </include>
</includes>